{
  "ignoreFile": ".gitignore",
  "ignore": [
    ".idea/**/*",
    ".vs/**/*",
    ".github/",
    "properties/**/*",
    "Scripts/",
    "src/Nitric.Sdk/Proto/**/*",
    "test/**/*",
    "tools/",
    "makefile",
    ".*",
    "**/*.config.*",
    "**/.gitignore",
    "**/bin/*",
    "**/bin/**/*",
    "**/obj/*",
    "**/obj/**/*",
    "**/*.md",
    "**/*.sln",
    "**/*.csproj",
    "**/*.protodep",
    "**/*.config",
    "*.html"
  ],
  "license": "./tools/license/license_header.txt",
  "licenseFormats": {
    "js|ts|cs": {
      "eachLine": {
        "prepend": "// "
      }
    },
    "dotfile|^Dockerfile": {
      "eachLine": {
        "prepend": "# "
      }
    }
  },
  "trailingWhitespace": "TRIM"
}
